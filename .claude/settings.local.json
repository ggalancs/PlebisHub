{
  "permissions": {
    "allow": [
      "Bash(if [ -f /tmp/latest_test_results.json ])",
      "Bash(then cat /tmp/latest_test_results.json)",
      "Bash(timeout 120 bundle exec rspec:*)",
      "Bash(if [ -f /tmp/routing_fixes_results.json ])",
      "Bash(then cat /tmp/routing_fixes_results.json)",
      "Bash(jq:*)",
      "Bash(then jq -r \".examples[] | select(.status == \"\"failed\"\") | .file_path\" /tmp/routing_fixes_results.json)",
      "Bash(else echo \"No results file found\")",
      "Bash(chmod:*)",
      "Bash(/tmp/test_all_controllers.sh)",
      "Bash(cut:*)",
      "Bash(if [ -f /tmp/militant_spec_results.json ])",
      "Bash(then jq -r '.summary' /tmp/militant_spec_results.json)",
      "Bash(else echo \"File not found\")",
      "Bash(if [ -f /tmp/impulsa_fixed_results.json ])",
      "Bash(then jq -r '.summary' /tmp/impulsa_fixed_results.json)",
      "Bash(if [ -f /tmp/post_factory_fix_results.json ])",
      "Bash(then jq -r '.summary' /tmp/post_factory_fix_results.json)",
      "Bash(else echo \"Test suite still running...\")",
      "Bash(else echo \"Still running...\")",
      "Bash(if [ -f /tmp/session_2_final_results.json ])",
      "Bash(__NEW_LINE__ fi)",
      "Bash(bundle exec rake:*)",
      "Bash(BETTER_ERRORS_INSIDE_FRAME=1 bundle exec rspec:*)",
      "Bash(if [ -f /tmp/post_metas_fix_results.json ])",
      "Bash(then jq -r '.summary' /tmp/post_metas_fix_results.json)",
      "Bash(else echo \"Test file not ready yet\")"
    ],
    "deny": [],
    "ask": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "filesystem",
    "godot"
  ]
