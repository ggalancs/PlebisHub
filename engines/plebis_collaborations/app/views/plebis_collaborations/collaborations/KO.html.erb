<% content_for :title, t("plebisbrand.collaboration.title") %>

<div class="content-content cols">
  <div class="row">
    <div class="col-b-4a12">
      <%= content_tag(:h2, t("plebisbrand.collaboration.title")) %>

      <%= render partial: "steps", locals: {step: 3} %>

      <%= error_box t("plebisbrand.collaboration.ko.title"), false do %>
          <p><%= @order.error_message if @order %></p>
      <% end %>
