<%#
  Modern Footer Partial

  Responsive footer with links, social media, and legal information.
  Uses Tailwind CSS classes.

  Usage:
    <%= render 'shared/footer' %>
%>

<footer class="footer bg-gray-900 text-gray-300">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <%# Brand & Description %>
      <div class="lg:col-span-1">
        <div class="flex items-center gap-2 mb-4">
          <%= image_tag 'logo-white.png', alt: 'PlebisHub', class: 'h-8 w-auto', onerror: "this.style.display='none'" rescue nil %>
          <span class="font-heading font-bold text-xl text-white">PlebisHub</span>
        </div>
        <p class="text-sm text-gray-400 mb-4">
          <%= t('footer.description', default: 'Plataforma de participación ciudadana para una democracia más directa y transparente.') %>
        </p>

        <%# Social Media Links %>
        <div class="flex items-center gap-3">
          <% if ENV['TWITTER_URL'].present? %>
            <%= link_to ENV['TWITTER_URL'], class: 'text-gray-400 hover:text-white transition-colors', target: '_blank', rel: 'noopener' do %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
              <span class="sr-only">Twitter / X</span>
            <% end %>
          <% end %>

          <% if ENV['FACEBOOK_URL'].present? %>
            <%= link_to ENV['FACEBOOK_URL'], class: 'text-gray-400 hover:text-white transition-colors', target: '_blank', rel: 'noopener' do %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/></svg>
              <span class="sr-only">Facebook</span>
            <% end %>
          <% end %>

          <% if ENV['INSTAGRAM_URL'].present? %>
            <%= link_to ENV['INSTAGRAM_URL'], class: 'text-gray-400 hover:text-white transition-colors', target: '_blank', rel: 'noopener' do %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"/></svg>
              <span class="sr-only">Instagram</span>
            <% end %>
          <% end %>

          <% if ENV['YOUTUBE_URL'].present? %>
            <%= link_to ENV['YOUTUBE_URL'], class: 'text-gray-400 hover:text-white transition-colors', target: '_blank', rel: 'noopener' do %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
              <span class="sr-only">YouTube</span>
            <% end %>
          <% end %>

          <% if ENV['TELEGRAM_URL'].present? %>
            <%= link_to ENV['TELEGRAM_URL'], class: 'text-gray-400 hover:text-white transition-colors', target: '_blank', rel: 'noopener' do %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/></svg>
              <span class="sr-only">Telegram</span>
            <% end %>
          <% end %>
        </div>
      </div>

      <%# Quick Links %>
      <div>
        <h3 class="text-white font-semibold mb-4"><%= t('footer.quick_links', default: 'Enlaces rápidos') %></h3>
        <ul class="space-y-2">
          <% if defined?(PlebisProposals) %>
            <li><%= link_to t('nav.proposals', default: 'Propuestas'), proposals_path, class: 'text-gray-400 hover:text-white transition-colors' rescue nil %></li>
          <% end %>
          <% if defined?(PlebisVotes) %>
            <li><%= link_to t('nav.votes', default: 'Votaciones'), elections_path, class: 'text-gray-400 hover:text-white transition-colors' rescue nil %></li>
          <% end %>
          <% if defined?(PlebisCollaborations) %>
            <li><%= link_to t('nav.collaborate', default: 'Colabora'), collaborations_path, class: 'text-gray-400 hover:text-white transition-colors' rescue nil %></li>
          <% end %>
          <% if defined?(PlebisParticipation) %>
            <li><%= link_to t('nav.teams', default: 'Equipos'), participation_teams_path, class: 'text-gray-400 hover:text-white transition-colors' rescue nil %></li>
          <% end %>
        </ul>
      </div>

      <%# Legal Links %>
      <div>
        <h3 class="text-white font-semibold mb-4"><%= t('footer.legal', default: 'Legal') %></h3>
        <ul class="space-y-2">
          <li><%= link_to t('footer.terms', default: 'Términos de uso'), page_path('terms'), class: 'text-gray-400 hover:text-white transition-colors' rescue '#' %></li>
          <li><%= link_to t('footer.privacy', default: 'Política de privacidad'), page_path('privacy'), class: 'text-gray-400 hover:text-white transition-colors' rescue '#' %></li>
          <li><%= link_to t('footer.cookies', default: 'Política de cookies'), page_path('cookies'), class: 'text-gray-400 hover:text-white transition-colors' rescue '#' %></li>
          <li><%= link_to t('footer.accessibility', default: 'Accesibilidad'), page_path('accessibility'), class: 'text-gray-400 hover:text-white transition-colors' rescue '#' %></li>
        </ul>
      </div>

      <%# Contact %>
      <div>
        <h3 class="text-white font-semibold mb-4"><%= t('footer.contact', default: 'Contacto') %></h3>
        <ul class="space-y-2">
          <% if ENV['CONTACT_EMAIL'].present? %>
            <li>
              <a href="mailto:<%= ENV['CONTACT_EMAIL'] %>" class="text-gray-400 hover:text-white transition-colors flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <%= ENV['CONTACT_EMAIL'] %>
              </a>
            </li>
          <% end %>
          <li><%= link_to t('footer.faq', default: 'Preguntas frecuentes'), page_path('faq'), class: 'text-gray-400 hover:text-white transition-colors' rescue '#' %></li>
          <li><%= link_to t('footer.help', default: 'Centro de ayuda'), page_path('help'), class: 'text-gray-400 hover:text-white transition-colors' rescue '#' %></li>
        </ul>
      </div>
    </div>

    <%# Bottom Bar %>
    <div class="mt-12 pt-8 border-t border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-gray-500">
          &copy; <%= Time.current.year %> <%= t('app.name', default: 'PlebisHub') %>.
          <%= t('footer.rights', default: 'Todos los derechos reservados.') %>
        </p>

        <%# Language Selector %>
        <% if I18n.available_locales.size > 1 %>
          <div class="flex items-center gap-2">
            <% I18n.available_locales.each do |locale| %>
              <%= link_to locale.to_s.upcase,
                url_for(locale: locale),
                class: "px-2 py-1 text-xs font-medium rounded #{I18n.locale == locale ? 'bg-gray-700 text-white' : 'text-gray-500 hover:text-white'}" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</footer>
