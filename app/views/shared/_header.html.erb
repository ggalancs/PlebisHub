<%#
  Modern Header Partial

  Responsive header with navigation, user menu, and mobile support.
  Uses Tailwind CSS classes with Bootstrap fallback.

  Usage:
    <%= render 'shared/header' %>
%>

<header class="header bg-white border-b border-gray-200 sticky top-0 z-40">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <%# Logo (dynamic from brand images) %>
      <div class="flex items-center">
        <%= link_to root_path, class: 'flex items-center gap-2 text-primary-700 hover:text-primary-600 transition-colors' do %>
          <%= brand_image_tag 'logo_main', class: 'h-8 w-auto', fallback: 'brand/logo-horizontal.svg', onerror: "this.style.display='none'" %>
          <span class="font-heading font-bold text-xl hidden sm:block"><%= Rails.application.config.site_name rescue 'PlebisHub' %></span>
        <% end %>
      </div>

      <%# Desktop Navigation %>
      <nav class="hidden md:flex items-center gap-1" aria-label="Navegación principal">
        <% if defined?(PlebisCms) && PlebisCms::Engine %>
          <%= link_to t('nav.home', default: 'Inicio'), root_path, class: "nav-link #{current_page?(root_path) ? 'nav-link-active' : ''}" %>
        <% end %>

        <% if defined?(PlebisProposals) && PlebisProposals::Engine %>
          <%= link_to t('nav.proposals', default: 'Propuestas'), proposals_path, class: "nav-link #{controller_name == 'proposals' ? 'nav-link-active' : ''}" rescue nil %>
        <% end %>

        <% if defined?(PlebisVotes) && PlebisVotes::Engine %>
          <%= link_to t('nav.votes', default: 'Votaciones'), elections_path, class: "nav-link #{controller_name == 'elections' || controller_name == 'vote' ? 'nav-link-active' : ''}" rescue nil %>
        <% end %>

        <% if defined?(PlebisImpulsa) && PlebisImpulsa::Engine %>
          <%= link_to t('nav.impulsa', default: 'Impulsa'), impulsa_path, class: "nav-link #{controller_name == 'impulsa' ? 'nav-link-active' : ''}" rescue nil %>
        <% end %>

        <% if defined?(PlebisCollaborations) && PlebisCollaborations::Engine %>
          <%= link_to t('nav.collaborate', default: 'Colabora'), collaborations_path, class: "nav-link #{controller_name == 'collaborations' ? 'nav-link-active' : ''}" rescue nil %>
        <% end %>

        <% if defined?(PlebisMicrocredit) && PlebisMicrocredit::Engine %>
          <%= link_to t('nav.microcredits', default: 'Microcréditos'), microcredits_path, class: "nav-link #{controller_name == 'microcredit' ? 'nav-link-active' : ''}" rescue nil %>
        <% end %>

        <% if defined?(PlebisParticipation) && PlebisParticipation::Engine %>
          <%= link_to t('nav.teams', default: 'Equipos'), participation_teams_path, class: "nav-link #{controller_name == 'participation_teams' ? 'nav-link-active' : ''}" rescue nil %>
        <% end %>
      </nav>

      <%# User Menu %>
      <div class="flex items-center gap-2">
        <% if user_signed_in? %>
          <%# Notifications (if available) %>
          <% if respond_to?(:notifications_path) %>
            <%= link_to notifications_path, class: "btn btn-ghost btn-icon relative #{new_notifications_class}" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
              <span class="sr-only">Notificaciones</span>
            <% end %>
          <% end %>

          <%# User dropdown %>
          <div class="relative" data-controller="dropdown">
            <button
              type="button"
              class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 transition-colors"
              data-action="click->dropdown#toggle"
              aria-expanded="false"
              aria-haspopup="true"
            >
              <span class="avatar avatar-sm bg-primary-100 text-primary-700">
                <%= current_user.first_name.to_s[0].to_s.upcase %><%= current_user.last_name.to_s[0].to_s.upcase %>
              </span>
              <span class="hidden sm:block max-w-[120px] truncate">
                <%= current_user.first_name %>
              </span>
              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>

            <div
              class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-100 py-1 hidden"
              data-dropdown-target="menu"
              role="menu"
            >
              <%= link_to t('nav.profile', default: 'Mi perfil'), edit_user_registration_path, class: 'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50', role: 'menuitem' %>

              <% if current_user&.is_admin? %>
                <%= link_to t('nav.admin', default: 'Administración'), admin_root_path, class: 'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50', role: 'menuitem' if defined?(admin_root_path) %>
              <% end %>

              <hr class="my-1 border-gray-100">

              <%= link_to t('nav.logout', default: 'Cerrar sesión'), destroy_user_session_path, method: :delete, class: 'block px-4 py-2 text-sm text-red-600 hover:bg-red-50', role: 'menuitem' %>
            </div>
          </div>
        <% else %>
          <%= link_to t('nav.login', default: 'Iniciar sesión'), new_user_session_path, class: 'btn btn-ghost hidden sm:inline-flex' %>
          <%= link_to t('nav.register', default: 'Registrarse'), new_user_registration_path, class: 'btn btn-primary' %>
        <% end %>

        <%# Mobile menu button %>
        <button
          type="button"
          class="md:hidden btn btn-ghost btn-icon"
          data-action="click->mobile-menu#toggle"
          aria-label="Abrir menú"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <%# Mobile Navigation %>
  <div class="md:hidden hidden" data-mobile-menu-target="panel">
    <div class="px-4 py-3 space-y-1 border-t border-gray-200 bg-gray-50">
      <% if defined?(PlebisCms) && PlebisCms::Engine %>
        <%= link_to t('nav.home', default: 'Inicio'), root_path, class: 'block px-3 py-2 rounded-lg text-gray-700 hover:bg-white' %>
      <% end %>

      <% if defined?(PlebisProposals) && PlebisProposals::Engine %>
        <%= link_to t('nav.proposals', default: 'Propuestas'), proposals_path, class: 'block px-3 py-2 rounded-lg text-gray-700 hover:bg-white' rescue nil %>
      <% end %>

      <% if defined?(PlebisVotes) && PlebisVotes::Engine %>
        <%= link_to t('nav.votes', default: 'Votaciones'), elections_path, class: 'block px-3 py-2 rounded-lg text-gray-700 hover:bg-white' rescue nil %>
      <% end %>

      <% if defined?(PlebisImpulsa) && PlebisImpulsa::Engine %>
        <%= link_to t('nav.impulsa', default: 'Impulsa'), impulsa_path, class: 'block px-3 py-2 rounded-lg text-gray-700 hover:bg-white' rescue nil %>
      <% end %>

      <% if defined?(PlebisCollaborations) && PlebisCollaborations::Engine %>
        <%= link_to t('nav.collaborate', default: 'Colabora'), collaborations_path, class: 'block px-3 py-2 rounded-lg text-gray-700 hover:bg-white' rescue nil %>
      <% end %>

      <% if defined?(PlebisMicrocredit) && PlebisMicrocredit::Engine %>
        <%= link_to t('nav.microcredits', default: 'Microcréditos'), microcredits_path, class: 'block px-3 py-2 rounded-lg text-gray-700 hover:bg-white' rescue nil %>
      <% end %>

      <% if !user_signed_in? %>
        <hr class="my-2 border-gray-200">
        <%= link_to t('nav.login', default: 'Iniciar sesión'), new_user_session_path, class: 'block px-3 py-2 rounded-lg text-gray-700 hover:bg-white' %>
      <% end %>
    </div>
  </div>
</header>
