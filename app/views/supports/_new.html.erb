<% if proposal.discarded? %>  
    <span class="discarded">Esta propuesta no ha alcanzado el mínimo de apoyos en plazo.</span>
<% elsif proposal.supported?(current_user) %>
    <span class="supported">Ya has apoyado esta propuesta. ¡Muchas gracias!</span>
<% else %>
  <%= form_with model: [proposal, Support.new],
               id: "support_proposal_#{proposal.id}", local: false,
               style: "display: inline;" do |f| %>
      <%= f.submit "Apoyar propuesta", :class => button_class %>
  <% end %>
<% end %>