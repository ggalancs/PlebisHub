{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Additional Strict Checks */
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": false,

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/frontend/*"],
      "@components/*": ["./app/frontend/components/*"],
      "@composables/*": ["./app/frontend/composables/*"],
      "@assets/*": ["./app/frontend/assets/*"],
      "@types/*": ["./app/frontend/types/*"]
    },

    /* Vue specific */
    "types": ["vite/client", "vitest/globals", "@vue/runtime-core"]
  },
  "include": [
    "app/frontend/**/*.ts",
    "app/frontend/**/*.d.ts",
    "app/frontend/**/*.tsx",
    "app/frontend/**/*.vue"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.stories.ts", "**/tests/**"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
