{
  "name": "plebis-hub-frontend",
  "version": "1.0.0",
  "description": "Modern frontend for PlebisHub - Vue 3 + Vite + TypeScript + Tailwind CSS",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint app/frontend .storybook --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write app/frontend/",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-tokens": "style-dictionary build",
    "prepare": "husky"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "@vueuse/core": "^10.9.0",
    "axios": "^1.6.7",
    "dompurify": "^3.3.0",
    "lucide-vue-next": "^0.344.0",
    "pinia": "^2.1.7",
    "style-dictionary-utils": "^4.1.1",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@storybook/addon-a11y": "^8.0.0",
    "@storybook/addon-docs": "^10.0.6",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/addon-onboarding": "^10.0.6",
    "@storybook/test": "^8.0.0",
    "@storybook/vue3": "^8.0.0",
    "@storybook/vue3-vite": "^8.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.4",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-storybook": "^10.0.6",
    "eslint-plugin-vue": "^9.22.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "storybook": "^8.0.0",
    "style-dictionary": "^4.0.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "vite-plugin-ruby": "^5.0.0",
    "vitest": "^1.3.1",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^2.0.6"
  },
  "lint-staged": {
    "*.{vue,js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,json,md}": [
      "prettier --write"
    ]
  }
}
